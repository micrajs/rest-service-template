{
  "name": "@micra/rest-service-template",
  "version": "0.0.1",
  "author": "Olavo Amorim Santos<contact@micra.dev>",
  "license": "MIT",
  "main": ".micra/index.cjs.js",
  "module": ".micra/index.js",
  "types": ".micra/index.d.ts",
  "files": [
    ".micra/**/*"
  ],
  "scripts": {
    "build": "cross-env TS_NODE_PROJECT=\".config/build/tsconfig.webpack.json\" APP_ENV=dev webpack --config .config/build/webpack.config.ts",
    "build:prod": "cross-env NODE_ENV=production APP_ENV=prod TS_NODE_PROJECT=\".config/build/tsconfig.webpack.json\" webpack --config .config/build/webpack.config.ts",
    "format": "prettier --write 'src/**/*.{ts,tsx}' --config .prettierrc.js",
    "lint": "eslint 'src/**/*.{ts,tsx}' --cache --config .config/linting/.eslintrc.js --cache-location .config/linting/.eslintcache",
    "start": "nodemon --config .config/dev/nodemon.json",
    "migrate:up": "TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' knex migrate:up --knexfile ./.config/database/knexfile.ts",
    "migrate:down": "TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' knex migrate:down --knexfile ./.config/database/knexfile.ts",
    "test": "jest --config .config/test/jest.config.js"
  },
  "devDependencies": {
    "@micra/cli": "^0.0.25",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cls-hooked": "^4.3.1",
    "@types/connect": "^3.4.33",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.16",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/knex": "^0.16.1",
    "@types/node": "^14.14.10",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.25",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.6.3",
    "jest-docblock": "^26.0.0",
    "jest-runner": "^26.6.3",
    "jest-runner-groups": "^2.0.1",
    "node-factory": "^0.4.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@micra/application": "^0.0.9",
    "@micra/core": "^0.0.8",
    "@micra/dot-env": "^0.0.2",
    "@micra/kernel": "^0.0.3",
    "@micra/service-provider": "^0.0.2",
    "@micra/typedi-service-container": "^0.0.1",
    "@micra/validation-rules": "^0.0.9",
    "@micra/validator": "^0.0.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fastify": "^3.9.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.12",
    "middie": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "tslib": "^2.0.3",
    "typedi": "^0.8.0",
    "uuid": "^8.3.1"
  }
}
